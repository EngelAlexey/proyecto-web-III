<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/white">

    <!-- Header del Di谩logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="?attr/colorPrimary">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_filter"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Configurar Filtros"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp" />

        <ImageButton
            android:id="@+id/btnCloseDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="Cerrar" />

    </LinearLayout>

    <!-- Contenido Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Secci贸n: Rango de Fechas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Rango de Fechas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <!-- Fecha Inicio -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStartDate"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha Inicio"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:text="01/04/2025" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha Fin -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEndDate"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha Fin"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:text="30/04/2025" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Atajos de Fechas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToday"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoy"
                    android:textSize="12sp"
                    android:padding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnThisWeek"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Esta Semana"
                    android:textSize="12sp"
                    android:padding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnThisMonth"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Este Mes"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- Secci贸n: Personas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" Personas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectPersons"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Chip de Personas Seleccionadas -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPersons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                android:layout_marginBottom="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllPersons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todas las personas"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- Secci贸n: Zonas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" Zonas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectZones"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Chip de Zonas Seleccionadas -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupZones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                android:layout_marginBottom="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllZones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todas las zonas"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- Secci贸n: Opciones Adicionales -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="锔 Opciones del Reporte"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <!-- Incluir Horas -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchIncludeHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incluir horas trabajadas"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <!-- Incluir Atrasos -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchIncludeLate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incluir atrasos"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <!-- Incluir Ausencias -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchIncludeAbsences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incluir ausencias"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <!-- Incluir Fotos -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchIncludePhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incluir fotograf铆as"
                android:checked="false"
                android:layout_marginBottom="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp" />

            <!-- Tipo de Agrupaci贸n -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Agrupar Datos Por"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/radioGroupBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioGroupByPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Por Persona"
                    android:checked="true"
                    android:padding="8dp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioGroupByDay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Por D铆a"
                    android:padding="8dp" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radioGroupByZone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Por Zona"
                    android:padding="8dp" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

    <!-- Botones de Acci贸n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp"
        android:background="#F5F5F5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetFilters"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restablecer"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyFilters"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicar Filtros"
            android:textSize="14sp"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</LinearLayout>