<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- AppBar con Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Vista Previa del Reporte"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido Principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta de Informaci贸n General -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header con cono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_report"
                            android:padding="8dp"
                            app:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvReportName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reporte Mensual por Persona"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#212121"
                                tools:text="Reporte Mensual por Persona" />

                            <TextView
                                android:id="@+id/tvReportType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo: Mensual"
                                android:textSize="13sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp"
                                tools:text="Tipo: Mensual" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- Filtros Aplicados -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Filtros Aplicados"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F5F5F5"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvDateRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Per铆odo: 01/04/2025 - 30/04/2025"
                            android:textSize="13sp"
                            android:textColor="#616161"
                            android:layout_marginBottom="4dp"
                            tools:text=" Per铆odo: 01/04/2025 - 30/04/2025" />

                        <TextView
                            android:id="@+id/tvPersonsFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Personas: Todas"
                            android:textSize="13sp"
                            android:textColor="#616161"
                            android:layout_marginBottom="4dp"
                            tools:text=" Personas: Todas" />

                        <TextView
                            android:id="@+id/tvZonesFilter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Zonas: Todas"
                            android:textSize="13sp"
                            android:textColor="#616161"
                            tools:text=" Zonas: Todas" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Resumen Estad铆stico -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Resumen Estad铆stico"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="16dp" />

                    <!-- Grid de Estad铆sticas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Total Registros -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#E3F2FD"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvTotalRecords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="450"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                tools:text="450" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registros"
                                android:textSize="12sp"
                                android:textColor="#616161"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <!-- Total Personas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#E8F5E9"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvTotalPersons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                tools:text="15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personas"
                                android:textSize="12sp"
                                android:textColor="#616161"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Segunda Fila -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <!-- Total Horas -->
                        <LinearLayout
                            android:id="@+id/layoutTotalHours"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#FFF3E0"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvTotalHours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="360h"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#FF9800"
                                tools:text="360h 30m" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Horas Trabajadas"
                                android:textSize="12sp"
                                android:textColor="#616161"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="8dp"
                            android:layout_height="match_parent" />

                        <!-- Total Atrasos -->
                        <LinearLayout
                            android:id="@+id/layoutTotalLate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#FFEBEE"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvTotalLate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="#F44336"
                                tools:text="23" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Atrasos"
                                android:textSize="12sp"
                                android:textColor="#616161"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Vista Previa de Datos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" Primeros Registros"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:id="@+id/tvRecordCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mostrando 10 de 450"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            tools:text="Mostrando 10 de 450" />

                    </LinearLayout>

                    <!-- RecyclerView para Vista Previa -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPreviewData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_attendance_simple"
                        tools:itemCount="5" />

                    <!-- Mensaje de M谩s Datos -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver reporte completo para m谩s detalles"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Informaci贸n de Exportaci贸n -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Opciones de Exportaci贸n"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="El reporte se puede exportar en formato PDF con todos los datos completos."
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="12dp" />

                    <!-- Info del PDF -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#F5F5F5"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvPdfFileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Nombre: Reporte_Mensual_01-04-2025_30-04-2025.pdf"
                            android:textSize="12sp"
                            android:textColor="#616161"
                            android:layout_marginBottom="4dp"
                            tools:text=" Nombre: Reporte_Mensual_01-04-2025_30-04-2025.pdf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Ubicaci贸n: Downloads"
                            android:textSize="12sp"
                            android:textColor="#616161" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bot贸n Flotante para Exportar -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabExportPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Exportar a PDF"
        app:icon="@drawable/ic_export_pdf"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>