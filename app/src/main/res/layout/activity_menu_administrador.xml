<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bienvenido, Administrador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textSize="12sp"
            android:backgroundTint="#D32F2F"/>
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Panel de Administración"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Grid de botones -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        android:layout_gravity="center">


        <!-- Botón Gestión de Usuarios -->
        <Button
            android:id="@+id/btnGestionUsuarios"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Gestión de\nUsuarios"
            android:textSize="16sp"
            android:backgroundTint="#673AB7"/>

        <!-- Botón Gestión de Zonas -->
        <Button
            android:id="@+id/btnGestionZonas"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Gestión de\nZonas"
            android:textSize="16sp"
            android:backgroundTint="#3F51B5"/>

        <!-- Botón Gestión de Personal -->
        <Button
            android:id="@+id/btnGestionPersonal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Gestión de\nPersonal"
            android:textSize="16sp"
            android:backgroundTint="#009688"/>

        <!-- Botón Ver Asistencias -->
        <Button
            android:id="@+id/btnVerAsistencias"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Ver\nAsistencias"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"/>

        <Button
            android:id="@+id/btnConsultaAvanzada"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Consulta\nAvanzada"
            android:textSize="16sp"
            android:backgroundTint="#8BC34A"/>





        <!-- Botón Reportes -->
        <Button
            android:id="@+id/btnReportes"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Generar\nReportes"
            android:textSize="16sp"
            android:backgroundTint="#F44336"/>

        <!-- Botón Pantalla de Marca (para pruebas) -->
        <Button
            android:id="@+id/btnPantallaMarca"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Pantalla de\nMarca"
            android:textSize="16sp"
            android:backgroundTint="#607D8B"/>



    </GridLayout>

</LinearLayout>